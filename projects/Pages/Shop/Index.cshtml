@page
@model projects.Pages.Shop.IndexModel
@{
    ViewData["Title"] = "Shop";
}
<h1>Buy Premium Coins</h1>
<form method="post">
    <div class="mb-3">
        <label class="form-label">Amount</label>
        <input type="number" class="form-control" asp-for="Amount" min="1" />
    </div>
    <button type="submit" class="btn btn-primary">Purchase</button>
</form>
@if (Model.Message != null)
{
    <p class="mt-3 text-success">@Model.Message</p>
}
